<h1>Edit <%= figure.name %>'s Accessories</h1>
<h4>Edit Accessory</h4>
<!-- only display an image if one is present -->
<% if (accessory.image[0].src !== undefined) { %>
<img src="../../../..<%=accessory.image[0].src %>" height="300">
<% } %>
<form action="/figures/<%= figure.id %>/accessories/<%= accessory.id %>?_method=PUT" method="POST"
  enctype="multipart/form-data">
  <div class="form-group">
    <label for="accessoryName">Accessory Name</label>
    <input type="text" class="form-control" id="accessoryName" name="accessoryName"
      value="<%= accessory.accessoryName %>" />
  </div>
  <div class="form-check">
    <input type="checkbox" class="form-check-input" name="doHave" id="doHave" <% if
        (accessory.doHave === true) { %> checked <% } %> />
    <label for="doHave">Do I have it?</label>
  </div>
  <div class="form-group">
    <label for="image">Upload Image</label>
    <input type="file" id="image" name="image" class="form-control-file" value="">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>