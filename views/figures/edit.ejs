<span>
    <div>
        <h2>Edit <%= figure.name %></h2>
        <form action="/figures/<%= figure.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" name="name" value="<%= figure.name %>" />
            </div>
            <div class="form-group">
                <label for="toyLine">Toy Line</label>
                <input type="text" class="form-control" id="toyLine" name="toyLine" value="<%= figure.toyLine %>" />
            </div>
            <div class="form-group">
                <label for="year">Year</label>
                <input type="text" class="form-control" id="year" name="year" value="<%= figure.year %>" />
            </div>
            <div class="form-check">
                <input type="checkbox" name="doHave" id="doHave" <% if (figure.doHave === true) { %> checked <% } %> />
                <label for="doHave">Do I own it?</label>
            </div>
            <div class="form-group">
                <label for="image">Upload image</label>
                <input type="file" id="image" name="image" class="form-control-file" value="" />
            </div>

            <button type="submit" class="btn btn-primary">Edit</button>
        </form>
    </div>
    <div>
        <h1> </h1>
        <% if (figure.image[0].src !== undefined) { %>
        <img src="../../../..<%=figure.image[0].src %>" height="600px">
        <% } %>
    </div>
</span>